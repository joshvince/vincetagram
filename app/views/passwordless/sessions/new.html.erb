<div class="container mx-auto w-full h-full flex flex-col justify-center items-center text-gray-700">
  <h1 class="text-6xl font-black m-8">Log in</h1>
  <% if flash.empty?  %>
    <p class="p-4 text-sm">
      A login link will be emailed to you.
      <br/>
      If you need access, get in touch.
    </p>
  <% else %>
    <% flash.each do |message| %>
      <p class="p-4 text-green-600 text-sm text-center">
        <%= message[1] %>
      </p>
    <% end %>
  <% end %>
  <%= form_with model: @session, url: send(Passwordless.mounted_as).sign_in_path, data: { turbo: 'false' } do |f| %>
    <div class="flex flex-col mt-8">
      <% email_field_name = :"passwordless[#{@email_field}]" %>
      <%= text_field_tag email_field_name, params.fetch(email_field_name, nil), required: true, placeholder: 'Email', class: 'rounded-md border-2 border-gray-100' %>
      <%= f.submit I18n.t('passwordless.sessions.new.submit'), class: "rounded-md border-2 border-gray-500 p-3 my-6 hover:border-blue-500 hover:bg-blue-50 hover:cursor-pointer" %>
    </div>
  <% end %>
</div>
