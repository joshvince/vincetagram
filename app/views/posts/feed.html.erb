<div class="mt-16 bg-slate-50 w-full max-w-screen-md flex flex-col items-center justify-center">
  <%= render "notification_request" %>
  <% @post_ids.each do |post_id| %>
    <%= turbo_frame_tag post_id, "feed", src: feed_post_path(post_id), loading: "lazy" do %>
      <div class="animate-pulse bg-white w-screen pt-4 pb-8 flex flex-col justify-between border border-slate-100 rounded-md mb-4">
        <div class="px-4 text-sm font-bold">
          <div class="h-4 bg-slate-200 rounded w-1/3"></div>
        </div>
        <div class="my-4">
          <div class="h-80 mx-4 rounded px-4 bg-slate-200"></div>
        </div>
        <div class="text-slate-500 px-4 mb-4 text-xs uppercase">
          <div class="h-4 bg-slate-200 rounded w-1/5"></div>
        </div>
        <div class="px-4 mb-4">
          <div class="h-4 bg-slate-200 rounded"></div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
