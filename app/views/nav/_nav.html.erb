<div class="w-full h-16 p-4 flex justify-between items-center text-slate-700 fixed top-0
          bg-white border-b-slate-100 border-b shadow-sm">
  <%= link_to '/' do %>
    <div class="flex items-center">
      <%= image_tag 'postcard.png', class: 'h-8 mr-2' %>
      <span class="font-black text-sm">Postcard</span>
    </div>
  <% end %>
  <% if current_user %>
    <div
      class="flex justify-center items-center"
      data-controller="nav"
    >
      <% if current_user.admin? %>
        <%= link_to users_path, data: { 'nav-target': 'userList' } do %>
          <i class="fa-solid fa-users fa-xl mr-6"></i>
        <% end %>
        <%= link_to new_post_path, data: { 'nav-target': 'newPost'} do %>
          <i class="fa-solid fa-plus fa-2xl mr-6"></i>
        <% end %>
      <% end %>
      <div
        class="cursor-pointer"
        data-nav-target="avatar"
        data-action="click->nav#openLogOutForm"
      >
        <%= render 'shared/avatar', user: current_user %>
      </div>
      <div class="flex justify-center items-center transition-all hidden" data-nav-target="logOutForm">
        <span class="font-black mr-2">Log out?</span>
        <div class="rounded-full p-2 px-4 mr-2 bg-green-400 text-sm">
          <%= link_to auth.sign_out_path do %>
            <i class="fa-solid fa-check text-white"></i>
          <% end %>
        </div>
        <div class="rounded-full p-2 px-4 mr-2 bg-red-400 text-sm">
          <i class="fa-solid fa-xmark text-white" data-action="click->nav#closeLogOutForm"></i>
        </div>

      </div>
    </div>
  <% end %>
</div>
