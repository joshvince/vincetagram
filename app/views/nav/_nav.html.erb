<% content_for :nav do %>
    <div class="w-full h-16 p-4 flex justify-between items-center text-gray-700 fixed top-0
              bg-white border-b-gray-100 border-b shadow-sm">
      <%= link_to feed_path do %>
        <i class="fa-solid fa-camera-retro"></i>
        <span class="font-black text-sm">Postcard</span>
      <% end %>
      <% if current_user %>
        <div
          class="flex justify-center items-center"
          data-controller="nav"
        >
          <% if current_user.admin? %>
            <%= link_to new_post_path, data: { 'nav-target': 'newPost'} do %>
              <i class="fa-solid fa-plus fa-xl mr-4"></i>
            <% end %>
          <% end %>
          <div
            class="font-black text-sm uppercase rounded-full p-2 bg-gray-400"
            data-nav-target="avatar"
            data-action="click->nav#openLogOutForm"
          >
            <%= current_user.initials %>
          </div>
          <div class="flex justify-center items-center transition-all hidden" data-nav-target="logOutForm">
            <span class="font-black mr-2">Log out?</span>
            <div class="rounded-full p-2 px-4 mr-2 bg-green-400 text-sm">
              <%= link_to users.sign_out_path do %>
                <i class="fa-solid fa-check text-white"></i>
              <% end %>
            </div>
            <div class="rounded-full p-2 px-4 mr-2 bg-red-400 text-sm">
              <i class="fa-solid fa-xmark text-white" data-action="click->nav#closeLogOutForm"></i>
            </div>

          </div>
        </div>
      <% end %>
    </div>
<% end %>
